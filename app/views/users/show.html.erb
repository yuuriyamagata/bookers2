<%= render 'books/list', book: @book,user: @user %>
          
          
       <div class="col-md-8 offset-md-1">
          
          <h2>Books</h2>
          <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
         
         <% @books.each do |book| %>
         
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                   <%= image_tag current_user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td><%= link_to book.title,book_path(book.id) %></td>
                
                <td><%= book.body %></td>
              </tr>  
            </tbody>
            
         <% end %>
         
        </table>  
       </div>
  </div> 
</div> 
